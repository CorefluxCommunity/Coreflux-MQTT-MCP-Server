# MQTT Broker Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=

# TLS Configuration (optional)
MQTT_USE_TLS=false
MQTT_CA_CERT=
MQTT_CLIENT_CERT=
MQTT_CLIENT_KEY=

# Path to certificate files on host (for docker-compose)
CERT_PATH=./certs

# Coreflux Copilot API Configuration
# Get your API key from Coreflux Copilot dashboard
# This is required for the request_lot_code tool to work
DO_AGENT_API_KEY=your_coreflux_copilot_api_key_here

# Logging configuration
LOG_LEVEL=INFO 